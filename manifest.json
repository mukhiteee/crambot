{
        "manifest_version": 3,
        "name": "CramBot - AI Study Timetable Generator",
        "short_name": "CramBot",
        "version": "1.0.0",
        "description": "AI-powered study timetable generator for students. Create personalized exam schedules in seconds.",
        "author": "Mukhiteee",
        "homepage_url": "https://crambot.com",
        
        "icons": [
            {
                "src": "icon.svg",
                "sizes": "16x16",
                "type": "image/svg+xml",
                "purpose": "any"
            },
            {
                "src": "icon.svg",
                "sizes": "32x32",
                "type": "image/svg+xml",
                "purpose": "any"
            },
            {
                "src": "icon.svg",
                "sizes": "192x192",
                "type": "image/svg+xml",
                "purpose": "any maskable"
            },
            {
                "src": "icon.svg",
                "sizes": "512x512",
                "type": "image/svg+xml",
                "purpose": "any maskable"
            }
        ],

        "start_url": "/index.html",
        "scope": "/",
        "display": "standalone",
        "orientation": "portrait-primary",
        "theme_color": "#1f2937",
        "background_color": "#000000",

        "categories": ["productivity", "education"],
        "screenshots": [
            {
                "src": "screenshot-1.png",
                "sizes": "540x720",
                "type": "image/png",
                "form_factor": "narrow",
                "label": "CramBot Timetable Generator"
            },
            {
                "src": "screenshot-2.png",
                "sizes": "1280x720",
                "type": "image/png",
                "form_factor": "wide",
                "label": "Study Schedule Overview"
            }
        ],

        "shortcuts": [
            {
                "name": "Generate Timetable",
                "short_name": "New Timetable",
                "description": "Quickly generate a new study timetable",
                "url": "/index.html?action=generate",
                "icons": [
                    {
                        "src": "icon.svg",
                        "sizes": "192x192",
                        "type": "image/svg+xml"
                    }
                ]
            }
        ],

        "share_target": {
            "action": "/share",
            "method": "POST",
            "enctype": "multipart/form-data",
            "params": {
                "title": "title",
                "text": "text",
                "url": "url"
            }
        },

        "prefer_related_applications": false
    }